	   </shiro:hasPermission>
	   <shiro:hasPermission name="6"> 
	    	<a href="${ctx}/manage/security/organizationauthority/query.html" class="list-group-item <% out.print(getSelected("mebPropertyType")); %>">权限配置</a>
	   </shiro:hasPermission>
	   <br style="clear:both;" /> 
	</div> 
</div>
